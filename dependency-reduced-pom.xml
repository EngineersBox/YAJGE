<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.engineersbox</groupId>
  <artifactId>yajge</artifactId>
  <name>Yet-Another-Java-Game-Engine</name>
  <version>0.1.0</version>
  <build>
    <sourceDirectory>src/main</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven-surefire-plugin.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <transformers>
                <transformer>
                  <mainClass>com.engineersbox.yajge.testGame.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.github.timvlaer</groupId>
        <artifactId>tscfg-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>tscfg-sources</id>
            <goals>
              <goal>generate-config-class</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <templateFile>src/main/resources/templates/engineConfigTemplate.conf</templateFile>
          <packageName>com.engineersbox.yajge.resources.config</packageName>
          <outputDirectory>src/main</outputDirectory>
          <className>Config</className>
          <generateGetters>false</generateGetters>
          <useOptionals>true</useOptionals>
          <useDurations>true</useDurations>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>windows-profile</id>
      <properties>
        <native.target>natives-windows</native.target>
      </properties>
    </profile>
    <profile>
      <id>linux-profile</id>
      <properties>
        <native.target>natives-linux</native.target>
      </properties>
    </profile>
    <profile>
      <id>OSX-profile</id>
      <properties>
        <native.target>natives-macos</native.target>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.9.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-platform-engine</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-api</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.lwjgl</groupId>
        <artifactId>lwjgl-bom</artifactId>
        <version>${lwjgl.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <commons-collections.version>4.4</commons-collections.version>
    <java.version>17</java.version>
    <lwjgl.natives>natives-windows</lwjgl.natives>
    <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
    <joml.version>1.10.2</joml.version>
    <junit.jupiter.version>5.9.0</junit.jupiter.version>
    <maven-shade.version>3.2.4</maven-shade.version>
    <jaxb-runtime.version>4.0.0</jaxb-runtime.version>
    <lwjgl.version>3.3.1</lwjgl.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <jaxb-api.version>2.4.0-b180830.0359</jaxb-api.version>
    <log4j-core.version>2.19.0</log4j-core.version>
    <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    <commons-lang3.version>3.12.0</commons-lang3.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <pngdecoder.version>1.0</pngdecoder.version>
    <eclipse.colections.version>11.1.0</eclipse.colections.version>
    <typesafe.version>1.4.2</typesafe.version>
  </properties>
</project>
